<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="lab006.MainActivity">


    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/textView2"
        android:textSize="50sp"
        android:gravity="center_horizontal"
        android:textAlignment="gravity"
        android:layout_marginLeft="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editText2"
        android:layout_marginStart="50dp" />

    <EditText
        android:hint="Введите Y"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText2"
        android:textSize="30dp"
        android:elegantTextHeight="false"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:textAlignment="gravity"
        android:background="@drawable/ofor"
        android:layout_alignTop="@+id/editText"
        android:layout_alignParentEnd="true" />

    <EditText
        android:hint="Результат"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText3"
        android:textSize="50dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textAlignment="gravity"
        android:enabled="false"
        android:background="@drawable/ofor" />

    <Button
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y"
        android:id="@+id/button8"
        android:layout_alignBottom="@+id/button7"
        android:layout_toEndOf="@+id/button7"
        android:layout_marginLeft="5dp" />

    <TextView        android:layout_width="50dp"
        android:layout_height="50dp"

        android:id="@+id/textView"
        android:textSize="50sp"
        android:gravity="center_horizontal"
        android:textAlignment="gravity"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="60dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button" />

    <EditText
        android:hint="Введите X"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText"
        android:textSize="30dp"
        android:elegantTextHeight="false"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:textAlignment="gravity"
        android:background="@drawable/ofor"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/textView3"
        android:textSize="40dp"
        android:gravity="center_horizontal"
        android:textAlignment="gravity"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true" />

    <Button
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:id="@+id/button7"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="В двоичный код"
        android:id="@+id/textView4"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:textAlignment="gravity"
        android:layout_above="@+id/button8"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp" />

    <Button
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X mod Y"
        android:id="@+id/button5"
        android:layout_alignBaseline="@+id/button6"
        android:layout_alignBottom="@+id/button6"
        android:layout_toEndOf="@+id/button7" />

    <Button
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X xor Y"
        android:id="@+id/button6"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/textView4"
        android:layout_alignStart="@+id/editText2" />

    <Button
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X+Y"
        android:id="@+id/button"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:layout_marginStart="18dp" />

    <Button
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X-Y"
        android:id="@+id/button2"
        android:layout_marginLeft="5dp"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_toEndOf="@+id/textView2" />

    <Button
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X*Y"
        android:id="@+id/button3"
        android:layout_marginLeft="5dp"
        android:layout_alignBaseline="@+id/button4"
        android:layout_alignBottom="@+id/button4"
        android:layout_toStartOf="@+id/button5" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X/Y"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:id="@+id/button4"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_alignEnd="@+id/editText" />

</RelativeLayout>
